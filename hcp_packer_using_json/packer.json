{
    "variables": {
        "applicaiton_name": "10amdevops",
        "application_version": "1.0.0",
        "region": "us-east-1",
        "instance_type": "t2.micro",
        "source_ami": "ami-0557a15b87f6559cf",
        "ami_aws_account_id": "191323423716"
    },
    "builders": [
        {
            "name": "{{user `applicaiton_name`}}",
            "type": "amazon-ebs",
            "profile": "default",
            "ssh_username": "ubuntu",
            "force_deregister": "true",
            "force_delete_snapshot": "true",
            "associate_public_ip_address": "true", 
            "region": "{{user `region`}}",
            "source_ami": "{{user `source_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "ami_name": "{{user `applicaiton_name`}}-{{user `application_version`}}",
            "tags": {
                "Name": "{{user `applicaiton_name`}}",
                "CreatedBy": "Packer"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sudo apt-get install software-properties-common -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo add-apt-repository --yes --update ppa:ansible/ansible",
                "sudo apt-get install ansible -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get install git -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get install curl -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get install wget -y"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sudo apt-get install zip -y"
            ]

        },
        {
            "type": "shell",
            "execute_command": "sudo -u root /bin/bash -c '{{.Path}}'",
            "scripts": [
                "awscli.sh"
            ]

        }

    ]

}